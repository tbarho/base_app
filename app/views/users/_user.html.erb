	<li>
    <%= link_to user.username, user %>
    <% if current_user && current_user.admin? %>
      <% if user.roles %>
        | <strong>Roles:</strong> <%= user.roles.join(", ").titleize %>
      <% end %>
      | <%= link_to "Edit", edit_user_path(user) %> 
      | <%= link_to "Remove", user, :method => :delete, :confirm => "Are you sure?" %>
    <% end %>
  </li>
